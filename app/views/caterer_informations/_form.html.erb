  </div>

  <div class="field">
    <%= form.text_area :address, label: "Business Address", placeholder: 'eg. 123 Fake Street Sydney 2000' %>
  </div>

  <div class="field">
    <%= form.text_area :about, label: "About Your Business", placeholder: "e.g. At Bob's, we are passionate about burgers" %>
  </div>

  <div class="field">
    <%= form.file_field :image, label: "Profile Picture" %>
  </div>

  <div class="field">
    <%= form.select(:type_of_event, CatererInformation.type_of_events.keys)
%> 
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>