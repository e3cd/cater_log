<div class="text-center">
    <h1>Formal</h1>
</div>

<div class="container card-event p-2">
    <% @formal.each do |formal| %>
        <div class="card">
            <img class="card-img-top" src=<%= formal.image_url %> alt="Card image cap">
            <div class="card-body"> 
                <h5 class="card-title"><%= formal.business_name %></h5>
                <p class="card-text"><%= formal.address %></p>
                <p class="card-text"><%= formal.about %></p>
                <%= link_to 'More Information', caterer_information_path(formal.user_id), class: "btn btn-outline-dark btn-sm" %>
            </div>
        </div>
    <% end %>
</div>
    
<div class="back-button">
    <%= link_to 'Back', event_types_path, class: "btn btn-outline-dark btn-sm back-button" %>
</div>